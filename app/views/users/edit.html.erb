<h1>マイページ編集</h1>
<%= form_with model: @user, local: true do |f| %>
<!--名前-->
<%= f.label :name, "名前" %>
<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
<!--プロフィール画像-->
<%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
<!--性別 enumで定義-->
<%= f.label :sex, "性別" %>
<%= f.label :man, "男性" %>
<%= f.radio_button :sex, :man %>
<%= f.label :woman, "女性" %>
<%= f.radio_button :sex, :woman %>
<%= f.label :other, "その他" %>
<%= f.radio_button :sex, :other %>
<!--生年月日-->
<%= f.label :date_of_birth, "生年月日" %>
<%= f.date_select :date_of_birth, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1995, 1, 1) %>
<!--自己紹介-->
<%= f.label :introduction, "自己紹介" %>
<%= f.text_area :introduction, size: "50x10" %>
<%= f.submit "変更を保存" %>
<%= link_to "退会する", quit_user_path %>
<% end %>