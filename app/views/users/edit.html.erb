<div class="container">
<h1>マイページ編集</h1>
<%= form_with model: @user, local: true do |f| %>
<!--名前-->
<div class="field">
<%= f.label :name, "名前" %>
<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>
<!--プロフィール画像-->
<div class="field">
<%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
</div>
<!--性別 enumで定義-->
<div class="field">
<%= f.label :sex, "性別" %>
<%= f.label :man, "男性" %>
<%= f.radio_button :sex, :man %>
<%= f.label :woman, "女性" %>
<%= f.radio_button :sex, :woman %>
<%= f.label :other, "その他" %>
<%= f.radio_button :sex, :other %>
</div>
<!--生年月日-->
<div class="field">
<%= f.label :date_of_birth, "生年月日" %>
<%= f.date_select :date_of_birth, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1995, 1, 1) %>
</div>
<!--自己紹介-->
<div class="field">
<%= f.label :introduction, "自己紹介" %>
<%= f.text_area :introduction, size: "50x10" %>
</div>
<div class="field">
<%= f.submit "変更を保存" %>
</div>
<%= link_to "退会する", quit_user_path %>
<% end %>
</div>